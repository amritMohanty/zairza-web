<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#FF7610" />
    <link rel="icon" type="image/png" href="/images/Visual.webp" />
    <title>Newsletter Editor | Zairza</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.3/tailwind.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.min.css"
    />

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
      integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg=="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"
      integrity="sha512-3j3VU6WC5rPQB4Ld1jnLV7Kd5xr+cq9avvhwqzbH/taCRNURoeEpoPBK9pDyeukwSxwRPJ8fDgvYXd6SkaZ2TA=="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/alpinejs/2.8.1/alpine.js"></script>
  </head>
  <body>
    <section>
        <%- include('../partials/toast.ejs') %>
      <div class="divide-y divide-yellow-500">
        <div class="flex flex-col justify-around h-1/3 px-5 py-5">
          <h1 class="text-center text-xl font-bold mt-10">
            Send Newsletter via Sendgrid Template
          </h1>
          <button
            class="
              px-10
              flex
              justify-center
              mx-auto
              py-3
              rounded-full
              bg-blue-700
              text-white
              hover:bg-blue-900
            "
            id="sendNewsletterBtn"
            onclick="sendNewsletter()"
          >
            <svg
              class="animate-spin -ml-1 mr-3 h-5 w-5 text-white hidden"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
            >
              <circle
                class="opacity-25"
                cx="12"
                cy="12"
                r="10"
                stroke="currentColor"
                stroke-width="4"
              ></circle>
              <path
                class="opacity-75"
                fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
              ></path>
            </svg>
            <span>Send Newsletter</span>
          </button>
        </div>
        <!-- component -->
        <div class="flex flex-col px-5 py-5">
          <h1 class="text-center text-xl font-bold mt-10">
            Newsletter Statistics
          </h1>
          <div
            class="
              min-w-screen 
              flex
              items-center
              justify-center
              font-sans
              overflow-hidden
            "
          >
            <div class="w-full lg:w-5/6 overflow-x-auto">
              <div class="bg-white shadow-md rounded my-6">
                <table class="min-w-max w-full table-auto">
                  <thead>
                    <tr
                      class="
                        bg-gray-200
                        text-gray-600
                        uppercase
                        text-sm
                        leading-normal
                      "
                    >
                      <th class="py-3 px-6 text-left">Date : Time</th>
                      <th class="py-3 px-6 text-left">Total Subscription</th>
                      <th class="py-3 px-6 text-center">Success</th>
                      <th class="py-3 px-6 text-center">Failed</th>
                    </tr>
                  </thead>
                  <tbody class="text-gray-600 text-sm font-light">
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                      <td class="py-3 px-6 text-left whitespace-nowrap">
                        <span
                          class="
                            bg-purple-200
                            text-purple-600
                            py-1
                            px-3
                            rounded-full
                            text-xs
                          "
                          >May 23 2021 : 10 am</span
                        >
                      </td>
                      <td class="py-3 px-6 text-left">
                        <span
                          class="
                            bg-yellow-200
                            text-yellow-600
                            py-1
                            px-3
                            rounded-full
                            text-xs
                          "
                          >30</span
                        >
                      </td>
                      <td class="py-3 px-6 text-center">
                        <span
                          class="
                            bg-green-200
                            text-green-600
                            py-1
                            px-3
                            rounded-full
                            text-xs
                          "
                          >20</span
                        >
                      </td>
                      <td class="py-3 px-6 text-center">
                        <span
                          class="
                            bg-red-200
                            text-red-600
                            py-1
                            px-3
                            rounded-full
                            text-xs
                          "
                          >2</span
                        >
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>

  <script src="/js/newsletterDashboard.js"></script>
</html>
